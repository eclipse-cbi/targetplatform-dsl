           locationURI="popup:org.eclipse.ui.popup.any?after=additions">
        <command
              commandId="fr.obeo.releng.targetplatform.ui.convertTargetPlatform"
              style="push">
           <visibleWhen
                 checkEnabled="true">
           </visibleWhen>
        </command>
     </menuContribution>
  </extension>  
    <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           allPopups="false"
